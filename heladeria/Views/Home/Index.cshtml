@{
    ViewData["Title"] = "Bienvenidos a Nuestra Heladería";
}

<div class="container ice-cream-container text-center mt-5">
    @if (Context.User.Identity.IsAuthenticated)
    {
        <h3>Bienvenido, @User.Identity.Name</h3>
        <p>Es un placer tenerte de regreso en La Casa del Helado.</p>

        <a asp-controller="Login" asp-action="Logout" class="btn btn-logout btn-lg mt-4">Cerrar sesión</a>
    }
    else
    {
        <h3>Bienvenido a Nuestra Heladería</h3>
        <p>Inicia sesión con Google.</p>
        <p>para disfrutar de nuestros sabores especiales</p>

        <div class="mt-4">
            
            <a asp-controller="Login" asp-action="Login" class="btn btn-google btn-sm d-flex align-items-center justify-content-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" class="me-2">
                    <g id="google">
                        <g id="google-vector" fill-rule="evenodd" clip-rule="evenodd">
                            <path id="Shape" fill="#4285F4" d="M20.64 12.205q-.002-.957-.164-1.84H12v3.48h4.844a4.14 4.14 0 0 1-1.796 2.717v2.258h2.908c1.702-1.567 2.684-3.874 2.684-6.615"></path>
                            <path id="Shape_2" fill="#34A853" d="M12 21c2.43 0 4.468-.806 5.957-2.18L15.05 16.56c-.806.54-1.837.86-3.048.86-2.344 0-4.328-1.584-5.036-3.711H3.958v2.332A9 9 0 0 0 12.001 21"></path>
                            <path id="Shape_3" fill="#FBBC05" d="M6.964 13.712a5.4 5.4 0 0 1-.282-1.71c0-.593.102-1.17.282-1.71V7.96H3.957A9 9 0 0 0 3 12.002c0 1.452.348 2.827.957 4.042z"></path>
                            <path id="Shape_4" fill="#EA4335" d="M12 6.58c1.322 0 2.508.455 3.441 1.346l2.582-2.58C16.463 3.892 14.427 3 12 3a9 9 0 0 0-8.043 4.958l3.007 2.332c.708-2.127 2.692-3.71 5.036-3.71"></path>
                        </g>
                    </g>
                </svg>
                Iniciar sesión con Google
            </a>
        </div>
    }
</div>


<div class="text-center mt-5 text-muted footer-text">
    <small>Hecho por Christian Fidelio, Federico Gorostiaga y Tadeo Bodetto</small>
</div>

<style>
    body {
        background-color: #FAF7F0;
        font-family: 'Raleway', sans-serif;
        color: #4A4A4A;
    }

    .ice-cream-container {
        background-color: #F7F3E9;
        border-radius: 15px;
        padding: 30px;
        max-width: 600px;
        margin: auto;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        border-top: 6px solid #B0A28A;
    }

    h3 {
        color: #6D6B68;
        font-size: 1.8em;
        font-weight: 700;
    }

    p {
        font-size: 1.1em;
        color: #555;
        margin-top: 10px;
    }

    .btn-lg {
        font-size: 1em;
        padding: 10px 20px;
        border-radius: 8px;
    }

    .btn-logout {
        font-size: 1em;
        padding: 10px 20px;
        border-radius: 8px;
        background-color: #A69D8A;
        color: white;
        border: none;
        transition: 0.3s ease;
    }

        .btn-logout:hover {
            background-color: #8B8171;
        }

    .btn-google {
        font-size: 0.9em;
        padding: 8px 16px;
        border-radius: 5px;
        background-color: #fff;
        color: #4285F4;
        border: 1px solid #4285F4;
        transition: all 0.3s;
    }

        .btn-google:hover {
            background-color: #4285F4;
            color: white;
        }

    .footer-text {
        font-size: 0.85em;
        color: #7e7e7e;
        margin-top: 20px;
    }

    
    .ice-cream-container::before {
        content: "🍨";
        font-size: 2.5em;
        display: block;
        text-align: center;
        color: #A69D8A;
        margin-bottom: 15px;
    }

    .btn {
        font-family: 'Raleway', sans-serif;
        text-transform: capitalize;
        letter-spacing: 0.02em;
    }
</style>
