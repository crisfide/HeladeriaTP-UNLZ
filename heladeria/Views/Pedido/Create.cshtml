@model heladeria.Models.Pedido

@{
    ViewData["Title"] = "Crear Pedido";
}


<div class="container mt-5">
    <h1>Crear Pedido</h1>
    <h4>Complete los detalles del pedido</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                
                <div class="form-group">
                    <label asp-for="Kilos" class="control-label">Cantidad (Kilos)</label>
                    <input asp-for="Kilos" class="form-control" placeholder="Cantidad en Kilos" />
                    <span asp-validation-for="Kilos" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <label asp-for="IdHelado" class="control-label"></label>
                    <input asp-for="IdHelado" class="form-control" />
                    <span asp-validation-for="IdHelado" class="text-danger"></span>
                </div>

                
                <div class="form-group text-center">
                    <input type="submit" value="Crear Pedido" class="btn btn-primary" />
                </div>
            </form>

           
            <div class="text-center mt-4">
                <a asp-action="Index" class="back-link btn btn-outline-brown btn-lg">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>
