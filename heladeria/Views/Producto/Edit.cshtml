@model heladeria.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-5">
    <h1 class="text-center text-brown">Editar Producto</h1>
    <h4 class="text-center">Modificar los detalles del helado</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                
                <div class="form-group" style="display:none">
                    <label asp-for="IdHelado" class="control-label"></label>
                    <input asp-for="IdHelado" class="form-control" type="hidden" />
                    <span asp-validation-for="IdHelado" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripción del helado" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <label asp-for="Kilos" class="control-label">Cantidad (Kilos)</label>
                    <input asp-for="Kilos" class="form-control" placeholder="Cantidad en Kilos" />
                    <span asp-validation-for="Kilos" class="text-danger"></span>
                </div>

                
                <div class="form-group text-center">
                    <input type="submit" value="Guardar Cambios" class="btn btn-brown btn-lg" />
                </div>
            </form>
        </div>
    </div>

  
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-brown btn-lg">Volver a la lista</a>
    </div>
</div>


<style>
    .container {
        background-color: #f5f5f5; 
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1, h4 {
        color: #6a4e23; 
    }

    .form-group label {
        font-weight: bold;
        color: #6a4e23; 
    }

    .form-control {
        border-radius: 5px;
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.12);
    }

    .btn-lg {
        padding: 12px 30px;
        border-radius: 10px;
        font-size: 1.1em;
    }

    .btn-brown {
        background-color: #6a4e23; 
        border-color: #6a4e23; 
        color: white;
    }

        .btn-brown:hover {
            background-color: #5a3c1d; 
            border-color: #5a3c1d;
        }

    .btn-outline-brown {
        border-color: #6a4e23; 
        color: #6a4e23;
    }

        .btn-outline-brown:hover {
            background-color: #6a4e23;
            color: white;
        }

    .text-danger {
        color: #ff4d4d; 
    }
</style>


