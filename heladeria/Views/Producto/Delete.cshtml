@model heladeria.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<!-- Incluyendo Google Fonts para una tipografía moderna -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #f4f3ee;
        font-family: 'Poppins', sans-serif;
        color: #4a4a4a;
    }

    .container {
        background-color: #f9f7f2;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    h1, h3 {
        color: #6a4e23; /* Marrón oscuro */
    }

    h1 {
        font-size: 2.5em;
        font-weight: 600;
    }

    .font-weight-bold {
        font-weight: 600;
    }

    .btn-danger {
        background-color: #6a4e23; /* Marrón oscuro */
        border-color: #6a4e23;
        font-size: 1.2em;
        width: 200px;
        padding: 12px;
        border-radius: 8px;
        font-weight: 600;
        color: white;
    }

        .btn-danger:hover {
            background-color: #5a3c1d; /* Marrón más oscuro */
            border-color: #5a3c1d;
        }

    .btn-outline-primary {
        color: #6a4e23; /* Marrón oscuro */
        border-color: #6a4e23;
        font-weight: 600;
        padding: 10px 20px;
        margin-top: 20px;
        font-size: 1.1em;
    }

        .btn-outline-primary:hover {
            background-color: #6a4e23; /* Marrón oscuro */
            color: white;
        }

    .btn-group {
        text-align: center;
    }

    dl {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    dt {
        font-weight: 600;
        color: #333;
    }

    dd {
        margin-left: 0;
        color: #555;
    }

    .text-center {
        text-align: center;
    }

    .text-warning {
        font-size: 1.3em;
        color: #ffcc00; /* Amarillo para la advertencia */
    }
</style>

<div class="container mt-5">
    <h1 class="text-center text-danger">Eliminar Producto</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Pregunta de confirmación con color marrón -->
            <h3 class="text-center" style="color: #6a4e23;">¿Está seguro de que desea eliminar este producto?</h3>

            <dl class="row mt-4">

                <dt class="col-sm-3 font-weight-bold">ID del Producto:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdHelado)</dd>

                <dt class="col-sm-3 font-weight-bold">Descripción:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3 font-weight-bold">Cantidad (Kilos):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Kilos)</dd>

                <dt class="col-sm-3 font-weight-bold">Usuario Alta:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdUsuarioAlta)</dd>

                <dt class="col-sm-3 font-weight-bold">Fecha Alta:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaAlta)</dd>

                <dt class="col-sm-3 font-weight-bold">Usuario Modificación:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdUsuarioModificacion)</dd>

                <dt class="col-sm-3 font-weight-bold">Fecha Modificación:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaModificacion)</dd>

                <dt class="col-sm-3 font-weight-bold">Usuario Baja:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdUsuarioBaja)</dd>

                <dt class="col-sm-3 font-weight-bold">Fecha Baja:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaBaja)</dd>
            </dl>

            <div class="btn-group">
                <form asp-action="Delete">
                    <input type="submit" value="Eliminar Producto" class="btn btn-danger btn-lg" />
                </form>
                <br />
                <a class="btn btn-outline-primary mt-2" asp-action="Index">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>

