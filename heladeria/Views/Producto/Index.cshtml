@model IEnumerable<heladeria.Models.Producto>

@{
    ViewData["Title"] = "Listado de Helados";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #f4f3ee;
        font-family: 'Poppins', sans-serif;
        color: #4a4a4a;
    }

    .heladeria-container {
        background-color: #f7f4ed;
        border-radius: 12px;
        padding: 25px;
        margin-top: 30px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .heladeria-header {
        color: #a37d6c;
        text-align: center;
        font-size: 2.2em;
        font-weight: bold;
        margin-bottom: 25px;
    }

    .sub-header {
        color: #7d8c8b;
        font-size: 1.5em;
        font-weight: 500;
    }

    .btn-helado {
        background-color: #a37d6c;
        color: white;
        border: none;
        font-size: 0.9em;
        padding: 8px 16px;
        transition: all 0.3s ease;
    }

        .btn-helado:hover {
            background-color: #6d5c56;
            color: #f4f3ee;
        }

    .table-helado th {
        background-color: #c3bfb3;
        color: #4a4a4a;
        font-weight: 600;
        text-align: center;
    }

    .table-helado td {
        background-color: #f2ece5;
        color: #555;
        text-align: center;
    }

    .add-helado-btn {
        background-color: #a37d6c;
        color: white;
        border: none;
        font-size: 1em;
        padding: 10px 20px;
        border-radius: 8px;
    }

        .add-helado-btn:hover {
            background-color: #7d8c8b;
            color: white;
        }

    .icon {
        margin-right: 8px;
    }
</style>

<div class="container heladeria-container">
    <h1 class="heladeria-header">La Casa del Helado</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="sub-header">Nuestros Sabores</h4>
        <a asp-action="Create" class="btn add-helado-btn">
            <span class="icon">🍦</span> Agregar Nuevo Helado
        </a>
    </div>

    <table class="table table-hover table-helado table-bordered" id="tablaDatos">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IdHelado)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.Kilos)</th>
                <th>@Html.DisplayNameFor(model => model.IdUsuarioAlta)</th>
                <th>@Html.DisplayNameFor(model => model.FechaAlta)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdHelado)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Kilos)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdUsuarioAlta)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaAlta)</td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdHelado }, new { @class = "btn btn-helado btn-sm me-2" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdHelado }, new { @class = "btn btn-helado btn-sm me-2" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdHelado }, new { @class = "btn btn-helado btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
