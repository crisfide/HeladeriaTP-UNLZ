@model heladeria.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<!-- Estilos personalizados para el formulario -->
<style>
    .form-container {
        background-color: #e6f7ff; /* Fondo azul claro */
        border-radius: 8px;
        padding: 30px;
        margin-top: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-header {
        font-family: 'Comic Sans MS', cursive, sans-serif;
        color: #ffcc00; /* Amarillo brillante */
        text-align: center;
        font-size: 2.5em;
        margin-bottom: 20px;
    }

    .btn-create {
        background-color: #ffcc00; /* Amarillo brillante */
        color: white;
        font-size: 1.2em;
        width: 100%;
        border-radius: 8px;
        padding: 10px;
    }

        .btn-create:hover {
            background-color: #e6ac00; /* Amarillo más oscuro al pasar el mouse */
            color: white;
        }

    .form-group label {
        font-weight: bold;
        color: #007bff; /* Azul para etiquetas */
    }

    .form-group input {
        border-radius: 8px;
        border: 1px solid #007bff;
        padding: 10px;
        font-size: 1em;
        width: 100%;
        margin-bottom: 10px;
    }

        .form-group input:focus {
            border-color: #ffcc00; /* Cambio de borde cuando el campo está enfocado */
            box-shadow: 0 0 5px rgba(255, 204, 0, 0.5);
        }

    .form-group .text-danger {
        font-size: 0.9em;
        color: #ff4d4d; /* Rojo claro para los mensajes de error */
    }
</style>

<div class="container form-container">
    <h1 class="form-header">Crear Nuevo Producto</h1>
    <h4>Producto</h4>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Campo Descripción -->
        <div class="form-group">
            <label asp-for="Descripcion" class="control-label">Descripción</label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <!-- Campo Kilos -->
        <div class="form-group">
            <label asp-for="Kilos" class="control-label">Kilos</label>
            <input asp-for="Kilos" class="form-control" />
            <span asp-validation-for="Kilos" class="text-danger"></span>
        </div>

        <!-- Botón para crear el producto -->
        <div class="form-group">
            <input type="submit" value="Crear Producto" class="btn btn-create" />
        </div>
    </form>

    <!-- Enlace para volver a la lista -->
    <div>
        <a asp-action="Index" class="btn btn-outline-primary">Volver a la lista</a>
    </div>
</div>

