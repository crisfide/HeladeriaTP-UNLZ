@model heladeria.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}


<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #f4f3ee;
        font-family: 'Poppins', sans-serif;
        color: #4a4a4a;
    }

    .form-container {
        background-color: #f9f7f2; 
        border-radius: 10px;
        padding: 35px;
        margin-top: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-header {
        color: #a37d6c;
        text-align: center;
        font-size: 2em;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 600;
        color: #7d8c8b;
        font-size: 1.1em;
    }

    .form-group input {
        border-radius: 8px;
        border: 1px solid #c3bfb3;
        padding: 10px;
        font-size: 1em;
        width: 100%;
        margin-bottom: 15px;
        transition: border-color 0.3s ease;
    }

        .form-group input:focus {
            border-color: #a37d6c;
            box-shadow: 0 0 5px rgba(163, 125, 108, 0.3);
        }

    .btn-create {
        background-color: #a37d6c;
        color: white;
        font-size: 1.1em;
        padding: 12px;
        width: 100%;
        border-radius: 8px;
        font-weight: 500;
    }

        .btn-create:hover {
            background-color: #7d8c8b;
            color: #f4f3ee;
        }

    .text-danger {
        color: #d9534f;
        font-size: 0.9em;
    }

    .back-btn {
        color: #7d8c8b;
        font-weight: 600;
        margin-top: 15px;
    }

        .back-btn:hover {
            color: #a37d6c;
        }
</style>

<div class="container form-container">
    <h1 class="form-header">Crear Nuevo Sabor</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        
        <div class="form-group">
            <label asp-for="Descripcion" class="control-label">Descripción</label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

       
        <div class="form-group">
            <label asp-for="Kilos" class="control-label">Kilos</label>
            <input asp-for="Kilos" class="form-control" />
            <span asp-validation-for="Kilos" class="text-danger"></span>
        </div>

        
        <div class="form-group">
            <input type="submit" value="Crear Sabor" class="btn btn-create" />
        </div>
    </form>

    
    <div class="text-center mt-3">
        <a asp-action="Index" class="back-btn">← Volver a la lista</a>
    </div>
</div>
